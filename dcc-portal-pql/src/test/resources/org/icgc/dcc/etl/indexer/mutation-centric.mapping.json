{
  "mutation-centric":{
    "_all":{
      "enabled":"false"
    },
    "dynamic_templates":[
      {
        "template_1":{
          "match":"*",
          "match_mapping_type":"string",
          "mapping":{
            "index":"not_analyzed"
          }
        }
      }
    ],
    "date_detection":"false",
    "properties":{
      "transcript":{
        "type":"nested",
        "include_in_parent":"true",
        "properties":{
          "gene":{
            "properties":{
              "_gene_id":{
                "type":"string",
                "store":"yes",
                "index":"not_analyzed"
              },
              "symbol":{
                "type":"multi_field",
                "fields":{
                  "symbol":{ "type":"string", "store":"yes", "index":"not_analyzed"},
		          "symbol_x":  {"type": "string", "index" : "analyzed", "analyzer": "id_search"},
                  "symbol_":{ "type":"string", "index":"analyzed", "index_analyzer":"id_index", "search_analyzer":"id_search" }
                }
              },
	          "pathways":{
	          	"type":"nested"
	          }              
            }
          },
          "consequence":{
            "properties":{
              "aa_mutation":{
                "type":"multi_field",
                "fields":{
                  "aa_mutation":{ "type":"string", "store":"yes", "index":"not_analyzed" },
		          "aa_mutation_x":  {"type": "string", "index" : "analyzed", "analyzer": "id_search"},
                  "aa_mutation_":{ "type":"string", "index":"analyzed", "index_analyzer":"id_index", "search_analyzer":"id_search" }
                }
              }
            }
          },
          "functional_impact_prediction":{
          	"type":"nested"
          }
        }
      },
      "ssm_occurrence":{
        "type":"nested",
        "properties":{
          "observation": {
            "type":"nested"
          }
        }
      },
      "_mutation_id":{
        "type":"multi_field",
        "fields":{
          "_mutation_id":{ "type":"string", "store":"yes", "index":"not_analyzed" },
          "_mutation_id_x":  {"type": "string", "index" : "analyzed", "analyzer": "id_search"},
          "_mutation_id_":{ "type":"string", "index":"analyzed", "index_analyzer":"id_index", "search_analyzer":"id_search" }
        }
      },
      "chromosome":{
        "type":"multi_field",
        "fields":{
          "chromosome":{ "type":"string", "store":"yes", "index":"not_analyzed" },
          "chromosome_x":  {"type": "string", "index" : "analyzed", "analyzer": "id_search"},
          "chromosome_":{ "type":"string", "index":"analyzed", "index_analyzer":"id_index", "search_analyzer":"id_search" }
        }
      },
      "chromosome_start":{
        "type":"multi_field",
        "fields":{
          "chromosome_start":{ "type":"long", "store":"yes", "index":"not_analyzed" },
          "chromosome_start_x":  {"type": "string", "index" : "analyzed", "analyzer": "id_search"},
          "chromosome_start_":{ "type":"string", "index":"analyzed", "index_analyzer":"id_index", "search_analyzer":"id_search" }
        }
      },
      "chromosome_end":{
        "type":"long",
        "store":"yes",
        "index":"not_analyzed"
      },
      "mutation":{
        "type":"multi_field",
        "fields":{
          "mutation":{ "type":"string", "store":"yes", "index":"not_analyzed" },
          "mutation_x":  {"type": "string", "index" : "analyzed", "analyzer": "id_search"},
          "mutation_":{ "type":"string", "index":"analyzed", "index_analyzer":"id_index", "search_analyzer":"id_search" }
        }
      }
    }
  }
}
