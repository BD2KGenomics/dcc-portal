{
  "donor-centric":{
    "_source":{
      "compress":"true",
      "excludes": ["gene.*"]
    },
    "_all":{
      "enabled":"false"
    },
    "dynamic_templates":[
      {
        "template_1":{
          "match":"*",
          "match_mapping_type":"string",
          "mapping":{
            "index":"not_analyzed"
          }
        }
      }
    ],
    "date_detection":"false",
    "properties":{
      "gene":{
        "type":"nested",
        "properties":{
          "ssm":{
            "type":"nested",
	        "properties":{
	          "consequence":{
	            "type":"nested"
	          },
             "observation":{
               "type":"nested"
             }
	        }           
          },
          "pathways":{
            "type":"nested"
          }          
        }
      },
      "specimen":{
        "properties":{
          "_specimen_id":{
            "type":"multi_field",
            "fields":{
              "_specimen_id":{
                "type":"string",
                "store":"yes",
                "index":"not_analyzed"
              },
              "_specimen_id_x":{
                "type":"string",
                "index":"analyzed",
                "analyzer":"id_search"
              },
              "_specimen_id_":{
                "type":"string",
                "index":"analyzed",
                "index_analyzer":"id_index",
                "search_analyzer":"id_search"
              }
            }
          },
          "sample":{
            "properties":{
              "_sample_id":{
                "type":"multi_field",
                "fields":{
                  "_sample_id":{
                    "type":"string",
                    "store":"yes",
                    "index":"not_analyzed"
                  },
                  "_sample_id_x":{
                    "type":"string",
                    "index":"analyzed",
                    "analyzer":"id_search"
                  },
                  "_sample_id_":{
                    "type":"string",
                    "index":"analyzed",
                    "index_analyzer":"id_index",
                    "search_analyzer":"id_search"
                  }
                }
              }
            }
          }
        }
      },
      "_donor_id":{
        "type":"multi_field",
        "fields":{
          "_donor_id":{
            "type":"string",
            "store":"yes",
            "index":"not_analyzed"
          },
          "_donor_id_x":{
            "type":"string",
            "index":"analyzed",
            "analyzer":"id_search"
          },
          "_donor_id_":{
            "type":"string",
            "index":"analyzed",
            "index_analyzer":"id_index",
            "search_analyzer":"id_search"
          }
        }
      },
      "donor_id":{
        "type":"multi_field",
        "fields":{
          "donor_id":{
            "type":"string",
            "store":"yes",
            "index":"not_analyzed"
          },
          "donor_id_x":{
            "type":"string",
            "index":"analyzed",
            "analyzer":"id_search"
          },
          "donor_id_":{
            "type":"string",
            "index":"analyzed",
            "index_analyzer":"id_index",
            "search_analyzer":"id_search"
          }
        }
      },
      "_project_id":{
        "type":"multi_field",
        "fields":{
          "_project_id":{
            "type":"string",
            "store":"yes",
            "index":"not_analyzed"
          },
          "_project_id_x":{
            "type":"string",
            "index":"analyzed",
            "analyzer":"id_search"
          },
          "_project_id_":{
            "type":"string",
            "index":"analyzed",
            "index_analyzer":"id_index",
            "search_analyzer":"id_search"
          }
        }
      },
      "project":{
        "properties":{
          "project_name":{
            "type":"string",
            "store":"yes",
            "index":"not_analyzed"
          }
        }
      }      
    }
  }
}
